{
  "name": "mcvibes",
  "version": "0.1.0",
  "description": "Flow-based development methodology from TCR to DDD",
  "main": "dist/server.js",
  "bin": {
    "vibes": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "test": "jest",
    "tcr": "ts-node src/core/tcr.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limadelic/mcvibes.git"
  },
  "keywords": [
    "tcr",
    "test-commit-revert",
    "atdd",
    "bdd",
    "tidy-first",
    "ddd",
    "vibeflow"
  ],
  "author": "limadelic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/limadelic/mcvibes/issues"
  },
  "homepage": "https://github.com/limadelic/mcvibes#readme",
  "dependencies": {
    "axios": "^1.4.0",
    "express": "^4.18.2",
    "simple-git": "^3.19.1",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
