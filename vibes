#!/bin/bash

case "$1" in
  on)
    echo "MC Vibes in the house! Let's break some code down!"
    node dist/index.js
    ;;
  on!)
    nohup node dist/index.js > /tmp/mcvibes.log 2>&1 &
    echo "MC Vibes in the house! Let's break some code down!"
    ;;
  off)
    pkill -f 'node dist/index.js' || true
    echo "MC Vibes has left the building! Peace out!"
    ;;
  *)
    echo "Usage: vibes [on|on!|off]"
    echo "  on  - foreground mode"
    echo "  on! - background mode"
    echo "  off - stop MC Vibes"
    exit 1
    ;;
esac
