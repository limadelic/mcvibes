{
  "name": "mcvibes",
  "version": "0.2.8",
  "description": "Universal TCR (Test && Commit || Revert) tool",
  "license": "MIT",
  "author": "limadelic",
  "homepage": "https://github.com/limadelic/mcvibes",
  "bugs": "https://github.com/limadelic/mcvibes/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/limadelic/mcvibes.git"
  },
  "type": "module",
  "bin": {
    "mcvibes": "dist/index.js",
    "tcr": "dist/index.js",
    "vibes": "vibes"
  },
  "files": [
    "dist",
    "vibes"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "vibes:on": "node dist/index.js",
    "vibes:off": "pkill -f 'node dist/index.js' || true",
    "pretty": "prettier --write .",
    "test": "exit 0",
    "tcr": "./tcr.sh"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.5.0",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/node": "^22",
    "prettier": "^3.5.3",
    "shx": "^0.3.4",
    "typescript": "^5.3.3"
  }
}
